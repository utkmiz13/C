#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int number, guess, attempts = 0;
    int lower = 1, upper = 100;

    // seed random number
    srand(time(0));
    number = (rand() % (upper - lower + 1)) + lower;

    printf("\n=====================================\n");
    printf("     ðŸŽ¯ Welcome to Number Guessing Game\n");
    printf("=====================================\n");
    printf("I have chosen a number between %d and %d.\n", lower, upper);
    printf("Try to guess it!\n");

    do {
        printf("\nEnter your guess: ");
        scanf("%d", &guess);
        attempts++;

        if (guess > number)
            printf("Too high! Try again.\n");
        else if (guess < number)
            printf("Too low! Try again.\n");
        else
            printf("\nðŸŽ‰ Congratulations! You guessed it in %d attempts!\n", attempts);

    } while (guess != number);

    printf("The number was %d.\n", number);
    printf("Thanks for playing! ðŸ˜„\n");

    return 0;
}
