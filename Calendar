#include <stdio.h>

// Function to check if a year is a leap year
int isLeapYear(int year) {
    if ((year % 400 == 0) || (year % 4 == 0 && year % 100 != 0))
        return 1;
    return 0;
}

// Function to get number of days in a month
int getDaysInMonth(int month, int year) {
    switch (month) {
        case 1: return 31;
        case 2: return (isLeapYear(year)) ? 29 : 28;
        case 3: return 31;
        case 4: return 30;
        case 5: return 31;
        case 6: return 30;
        case 7: return 31;
        case 8: return 31;
        case 9: return 30;
        case 10: return 31;
        case 11: return 30;
        case 12: return 31;
        default: return 0;
    }
}

// Function to calculate day of week for 1st day of given month and year
// (0 = Sunday, 1 = Monday, ...)
int getFirstDay(int month, int year) {
    int d = 1, m = month, y = year;
    int f;

    if (m < 3) {
        m += 12;
        y--;
    }

    f = (d + ((13 * (m + 1)) / 5) + y + (y / 4) - (y / 100) + (y / 400)) % 7;

    // Zeller‚Äôs Congruence adjustment for Sunday
    return (f + 6) % 7;
}

int main() {
    int month, year, days, startDay;

    printf("\n=====================================\n");
    printf("        üóìÔ∏è  Mini Calendar in C\n");
    printf("=====================================\n");

    printf("Enter month (1-12): ");
    scanf("%d", &month);

    printf("Enter year: ");
    scanf("%d", &year);

    if (month < 1 || month > 12) {
        printf("‚ùå Invalid month! Please run again.\n");
        return 0;
    }

    days = getDaysInMonth(month, year);
    startDay = getFirstDay(month, year);

    printf("\n\n------------ %d / %d ------------\n", month, year);
    printf("Sun  Mon  Tue  Wed  Thu  Fri  Sat\n");

    // Print spaces for the first day
    for (int i = 0; i < startDay; i++)
        printf("     ");

    // Print all days
    for (int day = 1; day <= days; day++) {
        printf("%3d  ", day);
        if ((day + startDay) % 7 == 0)
            printf("\n");
    }

    printf("\n-------------------------------\n");
    printf("Thank you for using Mini Calendar!\n");

    return 0;
}
