#include <stdio.h>

int main() {
    int choice;
    float num1, num2, result;

    printf("Welcome to Parth Calculator - Your Personal Calculator!\n");

    do {
        // Display menu
        printf("\nSelect an operation:\n");
        printf("1. Addition (+)\n");
        printf("2. Subtraction (-)\n");
        printf("3. Multiplication (*)\n");
        printf("4. Division (/)\n");
        printf("5. Percentage (%%)\n");
        printf("6. Exit\n");
        printf("Enter your choice (1-6): ");
        scanf("%d", &choice);

        if(choice >= 1 && choice <= 5) {
            printf("Enter first number: ");
            scanf("%f", &num1);
            printf("Enter second number: ");
            scanf("%f", &num2);
        }

        switch(choice) {
            case 1:
                result = num1 + num2;
                printf("Result: %.2f + %.2f = %.2f\n", num1, num2, result);
                break;
            case 2:
                result = num1 - num2;
                printf("Result: %.2f - %.2f = %.2f\n", num1, num2, result);
                break;
            case 3:
                result = num1 * num2;
                printf("Result: %.2f * %.2f = %.2f\n", num1, num2, result);
                break;
            case 4:
                if(num2 == 0) {
                    printf("Error: Division by zero is not allowed!\n");
                } else {
                    result = num1 / num2;
                    printf("Result: %.2f / %.2f = %.2f\n", num1, num2, result);
                }
                break;
            case 5:
                result = (num1 / 100) * num2;
                printf("Result: %.2f%% of %.2f = %.2f\n", num1, num2, result);
                break;
            case 6:
                printf("Thank you for using Parth Calculator! Goodbye!\n");
                break;
            default:
                printf("Invalid choice! Please select 1-6.\n");
        }

    } while(choice != 6);

    return 0;
}
